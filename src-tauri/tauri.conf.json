{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cph-app",
  "version": "0.1.3",
  "identifier": "com.cetrico.cph",
  "build": {
    "beforeDevCommand": "deno task start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno task build",
    "frontendDist": "../dist/cph-app/browser"
  },
  "app": {
    "windows": [
      {
        "width": 800,
        "height": 600,
        "resizable": true,
        "maximized": true,
        "decorations": false,
        "minWidth": 450
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
